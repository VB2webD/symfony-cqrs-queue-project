{# templates/index.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Message Queue</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="container my-5">
    <h1 class="text-center mb-3">Dispatch Test Message</h1>

    {# Flash messages #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <div class="card d-inline-flex" style="background-color: #f9f9f9;">
        <div class="card-body text-center mx-auto">
            <h2 class="card-title">Send Message with Priority 0</h2>
            {{ form_start(form1) }}
            <div class="input-group justify-content-center">
                <div class="input-group-prepend">
                    <span class="input-group-text font-weight-bold">Amount</span>
                </div>
                {{ form_widget(form1.amount_prio1, {'attr': {'class': 'form-control', 'style': 'max-width: auto;'}}) }}
                {{ form_widget(form1.amount_prio2, {'attr': {'class': 'form-control', 'style': 'max-width: auto;'}}) }}
                {{ form_widget(form1.send, {'attr': {'class': 'btn btn-primary ml-3'}}) }}
            </div>
            {{ form_end(form1) }}
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
